.study-container.data-v-3f273c1e {
  padding: 0 0 120rpx 0;
  /* 底部留出导航栏空间 */
  background-color: #f8f9fa;
  min-height: 100vh;
}
.progress-card.data-v-3f273c1e {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 20rpx;
  padding: 40rpx;
  border-radius: 20rpx;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}
.progress-header.data-v-3f273c1e {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.progress-title.data-v-3f273c1e {
  font-size: 32rpx;
  font-weight: 600;
}
.progress-percent.data-v-3f273c1e {
  font-size: 48rpx;
  font-weight: bold;
}
.progress-info.data-v-3f273c1e {
  margin-top: 20rpx;
}
.progress-text.data-v-3f273c1e {
  font-size: 28rpx;
  opacity: 0.9;
}
.study-modules.data-v-3f273c1e {
  margin: 20rpx;
}
.module-grid.data-v-3f273c1e {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx 0;
}
.module-item.data-v-3f273c1e {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease;
}
.module-item.data-v-3f273c1e:active {
  transform: scale(0.95);
}
.module-icon.data-v-3f273c1e {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx;
}
.module-name.data-v-3f273c1e {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}
.module-progress.data-v-3f273c1e {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
}
.recent-study.data-v-3f273c1e {
  margin: 20rpx;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}
.recent-icon.data-v-3f273c1e {
  width: 60rpx;
  height: 60rpx;
  background: #f0f7ff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}