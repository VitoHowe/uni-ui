  flex: 1;
  border: none;
  border-radius: 14rpx;
  background: #eef2ff;
  color: #4338ca;
  padding: 14rpx 0;
  font-size: 26rpx;
}
.page-btn.data-v-3a32a5fd:disabled {
  opacity: 0.5;
}
.page-info.data-v-3a32a5fd {
  font-size: 24rpx;
  color: #6b7280;
